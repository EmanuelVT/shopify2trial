                    </div>

                    <div class="collection1__product-info">
                        <div class="collection1__product-details">
                            <span class="collection1__product-title">Product</span>
                        </div>

                        <span class="collection1__product-price">
                            $47.99 USD
                        </span>

                        <div class="collection1__product-colors">
                            <a href="#">
                                <div class="collection1__colors denim-blue"></div>
                            </a>
                        </div>


                    </div>
                </div>


            </div>
            <div class="col-md-3">
                <div class="collection1__collection-item">
                    <div class="collection1__product-image">
                        <div class="collection1__heart">
                            <i class="lni lni-heart"></i>
                        </div>
                        {{ 'product-1' | placeholder_svg_tag }}


                    </div>
                    <div class="collection1__product-info">
                        <div class="collection1__product-details">
                            <span class="collection1__product-title">Product</span>
                        </div>

                        <span class="collection1__product-price">
                            $27.99 USD
                        </span>

                        <a href="#">
                            <div class="collection1__colors blue"></div>
                        </a>
                    </div>
                </div>


            </div>
            <div class="col-md-3">
                <div class="collection1__collection-item">
                    <div class="collection1__product-image">
                        <div class="collection1__heart">
                            <i class="lni lni-heart"></i>
                        </div>
                        {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                    <div class="collection1__product-info">
                        <div class="collection1__product-details">
                            <span class="collection1__product-title">Product</span>
                        </div>

                        <span class="collection1__product-price">
                            $34.99 USD
                        </span>

                        <div>
                            {% for block in section.blocks %}
                            {% case block.type %}
                            {% when '@app'%}
                            {% render block%}
                            {% endcase %}
                            {% endfor %}
                        </div>

                        <a href="#">
                            <div class="collection1__colors blue"></div>
                        </a>
                    </div>
                </div>



            </div>


        </div>
    </div>


</div>

{% endif %}


