{{ 'Collection.css' | asset_url | stylesheet_tag }}

{% if section.settings.collection.all_products_count %}
<div class="collection collection1">
    <div class="container">
        <div class="row">
            {%- for product in section.settings.collection.products limit: section.settings.product_display -%}

            <div
                class="{{ section.settings.xl_devices }} {{ section.settings.lg_devices }} {{ section.settings.md_devices }} {{ section.settings.sm_devices }}">
                <div class="collection1__collection-item ">
                    <div class="collection1__heart">
                        <i class="lni lni-heart"></i>
                    </div>
                    <div class="collection1__product-image {{section.settings.product_shape}}"
                        style="background:{{section.settings.background_color}}">





                        {%- if product.images[0] != blank -%}

                        {%- if section.settings.product_shape == "rectangular" -%}

                        <a href="{{ product.url }}">
                            <img class="bg"
                                srcset="{%- if product.images[0].width >= 165 -%}{{ product.images[0] | img_url: '165x' }} 165w,{%- endif -%}
                                      {%- if product.images[0].width >= 360 -%}{{ product.images[0] | img_url: '360x' }} 360w,{%- endif -%}
                                      {%- if product.images[0].width >= 535 -%}{{ product.images[0] | img_url: '535x' }} 535w,{%- endif -%}
                                      {%- if product.images[0].width >= 750 -%}{{ product.images[0] | img_url: '750x' }} 750w,{%- endif -%}
                                      {%- if product.images[0].width >= 1070 -%}{{ product.images[0] | img_url: '1070x' }} 1070w,{%- endif -%}
                                      {%- if product.images[0].width >= 1500 -%}{{ product.images[0] | img_url: '2000x' }} 2000w,{%- endif -%}"
                                src="{{ product.images[0]}}"
                                sizes="(min-width: {{ settings.page_width }}px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                                alt="{{ product.images[0].alt | escape }}" loading="lazy"
                                width="{{ product.images[0].width }}" height="{{ product.images[0].height }}"
                                style="object-fit: {{section.settings.image_fit}};"></a>
                        {%-else-%}
                        <a href="{{ product.url }}">
                            <img class="bg"
                                srcset="{%- if product.images[0].width >= 165 -%}{{ product.images[0] | img_url: '165x' }} 165w,{%- endif -%}
                                      {%- if product.images[0].width >= 360 -%}{{ product.images[0] | img_url: '360x' }} 360w,{%- endif -%}
                                      {%- if product.images[0].width >= 535 -%}{{ product.images[0] | img_url: '535x' }} 535w,{%- endif -%}
                                      {%- if product.images[0].width >= 750 -%}{{ product.images[0] | img_url: '750x' }} 750w,{%- endif -%}
                                      {%- if product.images[0].width >= 1070 -%}{{ product.images[0] | img_url: '1070x' }} 1070w,{%- endif -%}
                                      {%- if product.images[0].width >= 1500 -%}{{ product.images[0] | img_url: '2000x' }} 2000w,{%- endif -%}"
                                src="{{ product.images[0]}}"
                                sizes="(min-width: {{ settings.page_width }}px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                                alt="{{ product.images[0].alt | escape }}" loading="lazy" width="400" height="190"
                                style="object-fit: {{section.settings.image_fit}};"></a>
                        {%- endif- %}
                        {%- else -%}
                        <img src="https://images.pexels.com/photos/4814633/pexels-photo-4814633.jpeg?cs=srgb&dl=pexels-jonaorle-4814633.jpg&fm=jpg"
                            class="bg">

                        {%- endif -%}








                    </div>

                    <div class="collection1__product-info" style="margin-bottom:60px;">
                        {%- if section.settings.show_product_title == true -%}
                        <div class="collection1__product-details">
                            <span class="collection1__product-title"><a href="{{ product.url }}"
                                    style="text-decoration: none; color: black;">{{product.title}}</a></span>
                        </div>
                        {%- endif -%}

                        {%- if section.settings.show_product_price == true -%}
                        <span class="collection1__product-price">
                            $ {{product.price}}
                        </span>
                        {%- endif -%}

                        <div class="collection1__colors product1 denim-blue"></div>
                    </div>


                </div>

            </div>
            {%-  endfor-%}



        </div>
    </div>




</div>

