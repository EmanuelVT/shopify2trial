<div class="collection collection1">
    <div class="container">
        <h2 style="text-align:center; margin-bottom:50px;">{{section.settings.featured_title}}</h2>
        <div class="row">


            {%- for block in section.blocks -%}

            <div
                class="{{ section.settings.xl_devices }} {{ section.settings.lg_devices }} {{ section.settings.md_devices }} {{ section.settings.sm_devices }}">
                <div class="collection1__collection-item">
                    <div class="collection1__product-image {{section.settings.product_shape}}"
                        style="background:{{section.settings.background_color}}">
                        <div class="collection1__heart">
                            <i class="lni lni-heart"></i>
                        </div>

                        {%- if block.settings.featured_product.featured_image != blank -%}

                        <a href="{{block.settings.featured_product.url}}">
                            <img srcset="//cdn.shopify.com/s/files/1/0590/8663/5170/{{block.settings.featured_product.featured_image}}"
                                src="//cdn.shopify.com/s/files/1/0590/8663/5170/{{block.settings.featured_product.featured_image}}"
                                style="object-fit: {{section.settings.image_fit}};"></a>

                        {%- else -%}

                        {{'image' | placeholder_svg_tag: 'placeholder-svg'}}

                        {%- endif -%}

                    </div>
                    <div class="collection1__product-info">
                        <div class="collection1__product-details">


                            {%- if section.settings.show_product_title == true -%}

                            <a href="{{block.settings.featured_product.url}}"
                                style="text-decoration: none; color:black">
                                <span class="collection1__product-title">{{block.settings.featured_product.title}}
                                </span>
                            </a>
                            {%- endif -%}

                        </div>

                        {%- if section.settings.show_product_price == true -%}

                        {%- if block.settings.featured_product.price != blank -%}

                        <span class="collection1__product-price">
                            ${{block.settings.featured_product.price}}
                        </span>

                        {%- endif -%}

                        {%- endif -%}
                        <div style="display: flex;">
                            {% assign colors = " " %}

                            {% for variant in block.settings.featured_product.variants %}
                            {% assign variantColor = variant.option2 %}
                            {% assign colors = colors | append: variantColor %}
                            {% assign colors = colors | append: ", " %}
                            <!-- <a href="#">

                                 <div class="collection1__colors {{variant.option2}}"> </div>
                            </a>-->
                            {% endfor %}


                            {% assign arrayColors = colors | split: "," %}

                            {% assign uniqueColors = arrayColors | uniq %}

                            {% for uniqueColor in uniqueColors %}

                            <a href="#">

                                <div class="collection1__colors {{uniqueColor}}"> </div>
                            </a>

                            {% endfor%}



                        </div>
                    </div>
                </div>

            </div>

            {%- endfor -%}



        </div>
    </div>


</div>



